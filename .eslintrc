{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "env": {
    "browser": false
  },
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": [2, "always-multiline"],
    "space-infix-ops": 0,
    "max-len": [2, 1000, 2],
    "indent": ["error", 2, { "MemberExpression": 0 }],
    "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
    }],
    "padded-blocks": [2, {"classes": "always"}],
  }
}
