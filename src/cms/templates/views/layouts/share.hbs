<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ title }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1 user-scalable=no">
    <link href="/css/main.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '849235845230060',
          xfbml      : true,
          version    : 'v2.5'
        });
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));

      window.twttr = (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0],
        t = window.twttr || {};
      if (d.getElementById(id)) return t;
      js = d.createElement(s);
      js.id = id;
      js.src = "https://platform.twitter.com/widgets.js";
      fjs.parentNode.insertBefore(js, fjs);

      t._e = [];
      t.ready = function(f) {
        t._e.push(f);
      };

      return t;
      }(document, "script", "twitter-wjs"));
    </script>

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="fb:app_id" content="849235845230060"/>
    <meta property="og:site_name" content="Nederburg Qhubeka"/>
    <meta property="og:url" content="{{ data.url }}">
    {{#if data.hasSection}}
      <meta name="twitter:title" content="{{ data.section.title }}" />
      <meta name="twitter:description" content="{{ data.section.content }}" />
      <meta name="twitter:image" content="https://res.cloudinary.com/{{data.cloudinaryName}}/image/upload/w_640/v{{data.section.coverImage.version}}/{{data.section.coverImage.public_id}}.{{data.section.coverImage.format}}" />
      <meta property="og:title" content="{{ data.section.title }}" />
      <meta property="og:description" content="{{ data.section.content }}" />
      <meta property="og:image" content="https://res.cloudinary.com/{{data.cloudinaryName}}/image/upload/w_640/v{{data.section.coverImage.version}}/{{data.section.coverImage.public_id}}.{{data.section.coverImage.format}}"/>
    {{else if data.hasArticle}}
      <meta name="twitter:title" content="{{ data.article.title }}" />
      <meta name="twitter:description" content="{{ data.article.description }}" />
      <meta name="twitter:image" content="https://res.cloudinary.com/{{data.cloudinaryName}}/image/upload/w_640/v{{data.article.coverImage.version}}/{{data.article.coverImage.public_id}}.{{data.article.coverImage.format}}" />
      <meta property="og:title" content="{{ data.article.title }}" />
      <meta property="og:description" content="{{ data.article.description }}" />
      <meta property="og:image" content="https://res.cloudinary.com/{{data.cloudinaryName}}/image/upload/w_640/v{{data.article.coverImage.version}}/{{data.article.coverImage.public_id}}.{{data.article.coverImage.format}}"/>
    {{else if data.hasCategory}}
      <meta name="twitter:title" content="{{ data.category.title }}" />
      <meta name="twitter:description" content="{{ data.category.description }}" />
      <meta name="twitter:image" content="https://res.cloudinary.com/{{data.cloudinaryName}}/image/upload/w_640/v{{data.category.wheelImage.version}}/{{data.category.wheelImage.public_id}}.{{data.category.wheelImage.format}}" />
      <meta property="og:title" content="{{ data.category.title }}" />
      <meta property="og:description" content="{{ data.category.description }}" />
      <meta property="og:image" content="https://res.cloudinary.com/{{data.cloudinaryName}}/image/upload/w_640/v{{data.category.wheelImage.version}}/{{data.category.wheelImage.public_id}}.{{data.category.wheelImage.format}}"/>
    {{/if}}

  </head>
  <body>
    {{{ body }}}
  </body>
</html>
